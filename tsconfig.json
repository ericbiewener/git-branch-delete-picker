{
  "compilerOptions": {
    "noEmit": true,
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": ["src", "types"]
}
